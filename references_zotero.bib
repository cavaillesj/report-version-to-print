	author = {Holeksa, Jan and Jaloviar, Peter and Kucbel, Stanislav and Saniga, Milan and Svoboda, Miroslav and Szewczyk, Janusz and Szwagrzyk, Jerzy and Zielonka, Tomasz and Żywiec, Magdalena},

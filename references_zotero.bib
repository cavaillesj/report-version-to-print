@article{sileshi_critical_2014,
	title = {A critical review of forest biomass estimation models, common mistakes and corrective measures},
	volume = {329},
	issn = {03781127},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0378112714003910},
	doi = {10.1016/j.foreco.2014.06.026},
	abstract = {The choice of biomass estimation models (BEMs) is one of the most important sources of uncertainty in quantifying forest biomass and carbon ﬂuxes. This review was motivated by many mistakes and pitfalls I encountered in the recent literature regarding BEMs. The most common mistakes were the arbitrary choice of analytical methods, model dredging and inadequate model diagnosis, ignoring collinearity, uncritical use of model selection criteria and uninformative reporting of results. Sometimes, errors in parameter estimates were not checked and model uncertainty was ignored when interpreting and reporting results. Consequently, biologically implausible and statistically dubious equations such as ln(M) = ln(a) + b(lnD) + c(lnD)2 + d(lnD)3 + e(lnq) have been published as allometric models. These are perpetuated in the literature, databases and ﬁeld manuals and will pose a serious threat to the integrity of future forest biomass estimates. Through worked examples, I also illustrate that (1) allometric coefﬁcients can be biased by the choice of analytical procedures and methodological artefacts; (2) collinearity of predictors can result in coefﬁcients with unacceptable levels of error; (3) the R2 and Akaike information criterion (AIC) have been misused and have resulted in the selection of implausible BEMs; and (4) differences in the deﬁnition of model ‘‘bias’’ has sometimes led to contradictory reports. I propose corrective measures for most of these problems and provide suggestions for prospective authors on how to avoid pitfalls in interpretation and reporting of results.},
	language = {en},
	urldate = {2019-04-30},
	journal = {Forest Ecology and Management},
	author = {Sileshi, Gudeta W.},
	month = oct,
	year = {2014},
	pages = {237--254}
}


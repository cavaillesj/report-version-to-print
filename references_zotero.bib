@article{sanchez-garduno_turinghopf_2018,
	title = {Turing–{Hopf} patterns on growing domains: {The} torus and the sphere},
	issn = {00225193},
	shorttitle = {Turing–{Hopf} patterns on growing domains},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0022519318304648},

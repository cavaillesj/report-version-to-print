@article{bertocci_contrasting_2005,
	title = {{CONTRASTING} {EFFECTS} {OF} {MEAN} {INTENSITY} {AND} {TEMPORAL} {VARIATION} {OF} {DISTURBANCE} {ON} {A} {ROCKY} {SEASHORE}},

@article{scott_examining_2016,
	title = {Examining alternative fuel management strategies and the relative contribution of {National} {Forest} {System} land to wildfire risk to adjacent homes – {A} pilot assessment on the {Sierra} {National} {Forest}, {California}, {USA}},

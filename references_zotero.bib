@article{crecente-campo_assessing_2016,
	title = {Assessing and modelling the status and dynamics of deadwood through national forest inventory data in {Spain}},
	volume = {360},
	issn = {03781127},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0378112715005861},

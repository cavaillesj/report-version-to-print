@article{russell_quantifying_2015,
	title = {Quantifying carbon stores and decomposition in dead wood: {A} review},
	volume = {350},
	issn = {03781127},
	shorttitle = {Quantifying carbon stores and decomposition in dead wood},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0378112715002558},
